.jfk-pages__theme {
  position: fixed;
  top: 0;
  right: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  background: {
    size: cover;
    repeat: no-repeat;
    position: center;
  };
  &.is-game {
    background-image: background-image(/bg.jpg);
  }
  &.is-default {
    background-image: background-image(/bg2.jpg);
  }
}