.jfk-rater {
  text-align: left;
  display: inline-block;
  line-height: normal;

  &-box {
    position: relative;
    display: inline-block;
    text-align: center;
    cursor: pointer;

    &:last-child {
      padding-right: 2px !important;
      margin-right: 0 !important;
    }

    &.is-disabled {
      color: #ccc !important;
      cursor: not-allowed;
    }
  }

  &-inner {
    position: relative;
    display: inline-block;
  }

  &-outer {
    position: absolute;
    left: 0;
    top: 0;
    display: inline-block;
    overflow: hidden;
  }

  &__default{
    color: #ccc;
  }

  &__active {
    color: #ffdd99;
  }
  & .jfk-rater__active:nth-child(2){
    color:#d6bf95;
  }
  & .jfk-rater__active:nth-child(3){
    color: #cdb280;
  }
  & .jfk-rater__active:nth-child(4){
    color:#c7a973;
  }
  & .jfk-rater__active:nth-child(5){
    color:#be9f67;
  }
  & .jfk-rater__active:nth-child(6){
    color:#b2945e;
  }
  .jfk-rater__default{
    color: #f0f0f0;
  }

  & .jfk-rater__default:nth-child(2){
    & .jfk-rater__active{
      color:#d6bf95;
    }
  }
  & .jfk-rater__default:nth-child(3){
    & .jfk-rater__active{
      color:#cdb280;
    }
  }
  & .jfk-rater__default:nth-child(4){
    & .jfk-rater__active{
      color:#c7a973;
    }
  }
  & .jfk-rater__default:nth-child(5){
    & .jfk-rater__active{
      color:#be9f67;
    }
  }
  & .jfk-rater__default:nth-child(6){
    & .jfk-rater__active{
      color:#b2945e;
    }
  }

}
