.jfk-msgbox {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate3d(-50%, -50%, 0);
  border-radius: px2rem(var(--border-radius-big));
  -webkit-user-select: none;
  overflow: hidden;
  backface-visibility: hidden;
  transition: .2s;
  width: calc(690 / 750 * 100%);
  text-align: center;
  box-sizing: border-box;
  padding-bottom: px2rem(67);
  &.is-icon {
    &.is-title {
      .jfk-msgbox {
        &__icon {
          height: px2rem(144);
          padding-top: px2rem(100);
        }
        &__header {
          padding-bottom: px2rem(50);
        }
        &__btns {
          padding-top: px2rem(58);
        }
      }
    }
    &.no-title {
      .jfk-msgbox{
        &__icon {
          height: px2rem(200);
          padding-top: px2rem(140);
        }
      }
    }
  }
  &.no-icon {
    &.is-title{
      .jfk-msgbox {
        &__header {
          padding-top: px2rem(76);
          padding-bottom: px2rem(60);
        }
      }
    }
  }
  &__title {
    letter-spacing: 0.05em;
  }
  &__content {
    line-height: calc(48 / 28);
    padding: {
      left: px2rem(82);
      right: px2rem(82);
    }
  }
  &.is-prompt {
    .jfk-msgbox {
      &__content {
        padding: {
          left: px2rem(24);
          right: px2rem(24);
          bottom: px2rem(12);
        }
      }
    }
  }
  &__header{
    line-height: 1;
    padding: {
      left: px2rem(52);
      right: px2rem(52);
    }
  }
  &__input {
    position: relative;
    input {
      background: transparent;
      font-size: calc(30 / 28)em;
      outline: 0 none;
      line-height: px2rem(60);
      padding: px2rem(18) px2rem(26);
      box-sizing: border-box;
      width: 100%;
      border-radius: 0;
    }
    .jfk-msgbox__status {
      text-align: left;
      position: absolute;
      top: 3px;
      left: 1px;
      right: 1px;
      bottom: 3px;
      overflow: hidden;
      font-size: calc(24 / 30)em;
      box-sizing: border-box;
      padding-left: calc(26 / 24)em;
      display: flex;
      align-items: center;
      &-tip {
        padding-left: calc(10 / 24)em;
      }
    }
  }
  &__btns {
    padding: {
      top: px2rem(76);
      left: px2rem(52);
      right: px2rem(52);
    }
    &.is-full {
      @mixin clearfix;
      padding: {
        left: px2rem(24);
        right: px2rem(24);
      }
      .jfk-msgbox {
        &__btn {
          width: calc(306 / 642 * 100%);
        }
        &__confirm {
          float: right;
        }
        &__cancel {
          float: left;
        }
      }
    }
  }
  &__btn {
    width: 100%;
  }
  &__icon {
    line-height: 1;
    display: inline-block;
  }
  &__close {
    position: absolute;
    top: px2rem(30);
    right: px2rem(30);
  }
  &__bounce-enter {
    opacity: 0;
    transform: translate3d(-50%, -50%, 0) scale(0.7);
  }
  &__bounce-leave-active {
    opacity: 0;
    transform: translate3d(-50%, -50%, 0) scale(0.9);
  }
}
.jfk-modal {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}
.jfk-modal-enter {
  animation: jfk-modal-in .2s ease;
}
.jfk-modal-leave {
  animation: jfk-modal-out .2s ease forwards;
}
@keyframes jfk-modal-in {
  0% {
    opacity: 0;
  }
  100% {
  }
}
@keyframes jfk-modal-out {
  0% {
  }
  100% {
    opacity: 0;
  }
}
