.jfk-switch {
  &__core {
    border: solid calc(3 / 30)em #808080;
    &:after {
      background-color: #bfbfbf;
    }
  }
  &__input {
    &:checked + .jfk-switch__core {
      border-color: currentColor;
      background-color: currentColor;
      &:after {
        background-color: #363636;
        box-shadow: 0px 4px 3px 2px rgba(0, 0, 1, 0.06);
      }
    }
  }
}