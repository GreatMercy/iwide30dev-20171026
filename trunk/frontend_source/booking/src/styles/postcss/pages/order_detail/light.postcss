.jfk-pages__orderDetail {
  & .jfk-pages__theme {
    background-color: #f6f7f7;
  }
  .grayColor80 {
    color: var(--font-color-extra-light-gray);
  }
  .grayColorbf {
    color: var(--font-color-light-gray);
  }
  .goldColor {
    color: var(--color-golden);
  }
  .darkColor333 {
    color: var(--font-color-dark-white);
  }
  .darkBlack1a {
    color: var(--color-deep-yellow);
  }
  .yellowColor{
    color: #dac576;
  }
  .info_place {
    color: var(--font-color-extra-light-gray);
  }

  .icon_dh {
    color: var(--color-golden);
  }

  .order_status {
    background-color: var(--color-white);
    & .status {
      &::before {
        background-color: var(--color-golden);
      }
      &.grayColorbf::before {
        background-color: var(--font-color-light-gray);
      }
    }

    & .order_btn {
      .order-text-item {
        &.cancel-text {
          color: var(--font-color-dark-white);
        }
      }
      .order-btn-item {
        color: var(--font-color-dark-white);
        border: 1px solid var(--color-deep-yellow);
        &.nowPay {
          color: var(--color-white);
          border: 0;
          background-color: var(--color-golden);
        }
      }
      & .comment {
        @mixin one-line vertical {
        };
        &::before {
          right: px2rem(30);
          background-color: #e0e0e0;
        }
      }
    }
  }
  .bottom_container {
    background: var(--color-white);
    box-shadow: 0 px2rem(-10) px2rem(60) #bebebe;
    .name {
      color: var(--font-color-light-silver);
    }
  }
  & .hotel_room_info {
    background-color: var(--color-white);
    &::before {
      background-color: var(--line-color-light-silver);
    }
    & span {
      &::before {
        background-color: var(--font-color-extra-light-gray);
      }
    }
    & span:nth-child(2) {
      color: #959595;
    }
  }
  .live_time {
    &::before {
      background-color: var(--line-color-light-silver);;
    }
  }

  .name {
    &::before {
      background-color: var(--line-color-light-silver);
    }
  }

  .order_info {
    &_item:last-child {
      &::before {
        background-color: var(--line-color-light-silver);
      }
    }
  }

}






































