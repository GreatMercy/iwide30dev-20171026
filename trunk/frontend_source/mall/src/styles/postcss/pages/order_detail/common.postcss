.jfk-pages__orderDetail{
    .orderDetail__state{
        padding-top: px2rem(70);
        &__main{
            padding-left: px2rem(70);
            padding-right: px2rem(70);
            position: relative;
            .goldlight{
                position: absolute;
                left: 0;
                top: 0;
                height: px2rem(80);
            }            
        }
        &__type{
            line-height: px2rem(80);
            i{
                font-size: px2rem(60);
            }
        }
        &__tip{
            color: #808080;
            line-height: px2rem(30);
            margin-top: px2rem(30);
        }
    }
    .orderDetail__gift{
        padding-left: px2rem(90);
        padding-right: px2rem(90);
        margin-top: px2rem(94);
        &__info{
            display: flex;
            align-items: center;            
            .productimg{
                width: calc(155 / 568 * 100%);
                border-radius: 3px;
            }
            .content{
                color: #fff;
                width: calc(413 / 568 *100%);
                box-sizing: border-box;
                .number{
                    color: #bfbfbf;
                    margin-left: px2rem(30);
                }
                h2{
                    font-weight: normal;
                    line-height: px2rem(34);
                }
                .price_box{
                    margin-top: px2rem(30);
                }
            }
        }
        &__btn{
            margin-top: px2rem(60);
        }
    }
    .orderDetail_giftcontent{
        .giftcontent_title{
            color: #808080;
            margin-top: px2rem(65);
            position: relative;
            padding-left: px2rem(30);
            padding-right: px2rem(30);
            letter-spacing: px2rem(4);
            &:before,&:after{
                content: '';
                display: inline-block;
                width: calc(260/690 *100%);
                height: 1px;
                position: absolute;
                top: 50%;
                background-color: #363636;
            }
            &:before{
                left: 0;
            }
            &:after{
                right: 0;
            }

        }
    }
}