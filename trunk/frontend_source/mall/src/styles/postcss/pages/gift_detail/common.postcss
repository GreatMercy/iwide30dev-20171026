.jfk-pages__gift-detail {
  .gift-theme-wish__content {
    margin-bottom: px2rem(90);
  }

  .gift-goods {
    &-img {
    }

    &-name {
      @mixin ellipsis {
      }
      margin-bottom: px2rem(44);
    }

    &-number {
      margin-bottom: px2rem(28);
    }

    &-btn {
      padding-left: 11%;
      padding-right: 11%;
      .jfk-button {
        border-color: transparent;
        background-color: transparent;
        background-repeat: no-repeat;
        background-position: center center;
        background-size: 100% 100%;
      }
    }
  }

  .gift-detail {
    &-bottom {
      position: fixed;
      width: 86%;
      left: 7%;
      bottom: px2rem(54);
    }

    &-line {
      padding-top: px2rem(48);
      @mixin one-line horizontal {
      }
      &::before {
        left: 0;
        top: 0;
      }
    }

    &-put-order {
      position: relative;
      margin: 0 auto;
      width: calc(315 / 28)em;
      &:after {
        content: '';
        position: absolute;
        height: px2rem(10);
        width: px2rem(10);
        transform: rotate(45deg);
        right: px2rem(-16);
        top: 50%;
        margin-top: px2rem(-5);
      }
    }

  }

}
