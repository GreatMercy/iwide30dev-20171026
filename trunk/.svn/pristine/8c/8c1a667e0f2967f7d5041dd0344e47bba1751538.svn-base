.jfk-radio {
  &--shape-rect{
    .jfk-radio {
      &__icon {
        border-color: #bfbfbf;
        .icon {
          color: #fff;
        }
      }
      &__text {
        color: #808080;
      }
    }
    input[type="radio"] {
      &:checked ~ .jfk-radio {
        &__text {
          color: inherit;
        }
      }
      &:disabled ~ .jfk-radio {
        &__icon {
          border-color: #dfdfdf;
        }
        &__text {
          color: #bfbfbf;
        }
      }
      &:disabled:checked ~ .jfk-radio {
        &__icon {
          &:before {
            border-color: #dfdfdf #dfdfdf transparent transparent;
          }
        }
      }
    }
    &.jfk-radio--disabled {
      .jfk-radio {
        &__icon {
          border-color: #dfdfdf;
        }
        &__text {
          color: #bfbfbf;
        }
      }
    }
    &.jfk-radio--disabled.jfk-radio--checked {
      .jfk-radio {
        &__icon {
          &:before {
            border-color: #dfdfdf #dfdfdf transparent transparent;
          }
        }
      }
    }
  }
}