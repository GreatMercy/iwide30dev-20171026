.jfk-price-tag {
  line-height: calc(34 / 26);
  height: calc(35 / 26 * 2)em;
  width: calc(102 / 26)em;
  padding: calc(20 / 26)em 0 calc(18 / 26)em 0;
  position: absolute;
  top: calc(-12 / 26)em;
  left: calc(30 / 750 * 100%);
  z-index: 10;
  color: #fff;
  text-align: center;
  &__mask{
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
    border-radius: 0 calc(33 / 26)em;
  }
  &__words{
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    height: 100%;
    padding: {
      left: calc(18 / 26)em;
      right: calc(24 / 26)em;
    }
    &.is-justify-space-between{
      justify-content: space-between;
    }
    &.is-justify-center{
      justify-content: center;
    }
  }
  &__word{
    font-size: 1em;
  }
  &--gaussian-blur {
    .jfk-price-tag__mask {
      &:before, &:after{
        content: '';
        position: absolute;
        z-index: -1;
        background-color: currentColor;
      }
      &:before {
        width: 50%;
        height: 50%;
        top: 25%;
        left: 25%;
        filter: blur(calc(19 / (2 + 7 / 22 * 2))em)
      }
    }
  }
  @each $color, $i in var(--price-tag-fill-colors) {
    &__theme-$(i) {
      .jfk-price-tag__mask {
        background-color: color($(color) a(90%));
        color: color($(color) a(90%))
      }
    }
  }
}