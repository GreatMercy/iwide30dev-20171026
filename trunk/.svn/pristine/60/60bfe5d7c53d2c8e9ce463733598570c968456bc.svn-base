.jfk-pages__gift-list {

  &.theme1 {
    /*主题祝福语颜色*/
    .gift-list-wish__content {
      color: #b57943;
    }

    /*主题背景图片*/
    .gift-list-bg {
      background-image: background-image(/gift_themes/theme1/bg.png);
    }

    /*主题标题*/
    .gift-list-title {
      width: px2rem(439);
      height: px2rem(272);
      background-image: background-image(/gift_themes/theme1/title.png);
      top: px2rem(20);
    }

    /*边线的颜色*/
    .gift-list-item:before {
      background-color: #d6c7a9;
    }

    .gift-list-item:first-child:after {
      background-color: #d6c7a9;
    }

    /*名字的颜色*/
    .gift-list-item__name {
      color: #a6835f;
    }

    /*日期的颜色*/
    .gift-list-item__date {
      color: #c29b72;
    }

    /*数量的颜色*/
    .gift-list-item__number {
      color: #a07e5b;
    }
  }



  .gift-list {
    position: relative;

    &:before {
      left: 0;
      top: 0;
    }

    &-title {
      position: absolute;
      top: 0;
      left: 50%;
      transform: translate(-50%, 0);
      background-size: contain;
      background-repeat: no-repeat;
    }

    &-item {
      position: relative;
      padding-top: px2rem(35);
      padding-bottom: px2rem(35);
      padding-left: px2rem(10);
      padding-right: px2rem(10);

      &:first-child {
        @mixin one-line horizontal, 100%, after {
        }
        &:after {
          top: 0;
          left: 0;
        }
      }

      @mixin one-line horizontal {
      }
      &:before {
        bottom: 0;
        left: 0;
      }

      &__header {
        height: px2rem(70);
        width: px2rem(70);
        border-radius: 50%;
        background-color: #dcdcdc;
        margin-right: px2rem(76);
      }

      &__info {
        p {
          line-height: 1;
          &:first-child {
            margin-bottom: px2rem(14);
          }
        }
      }

      &__number {
        flex: 1;
        letter-spacing: 2px;
      }

      &__name {
      }

      &__date {
      }

    }

    &-wish {
      padding-top: px2rem(320);
      height: px2rem(122);

      &__content {
        padding-bottom: px2rem(46);
        height: px2rem(58);
        line-height: px2rem(48);
        padding-left: px2rem(100);
        padding-right: px2rem(100);
        @mixin ellipsis 2 {
        }
      }
    }

    &-bg {
      position: fixed;
      width: 100%;
      height: 100%;
      left: 0;
      top: 0;
      background-size: cover;
      background-repeat: no-repeat;
      z-index: -1;
    }
  }

}
