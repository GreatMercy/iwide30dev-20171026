.jfk-pages__coupon {

  .coupon-base-info {
    &__shadow {
      @mixin line-down 4, default, inside;
      position: absolute;
      width: px2rem(30);
      height: px2rem(10);
      transform: rotate(-90deg);
      &::before {
        bottom: px2rem(-10);
      }
    }

    &__name {
      color: var(--font-color-white);
    }

    &__hotel {
      color: var(--font-color-extra-light-gray);
    }

    &__service {
      li {
        color: var(--font-color-light-gray);
        span {
          color: var(--font-color-extra-light-gray);
        }
      }
    }
  }

  .coupon-way {
    &__title {
      i {
        color: var(--font-color-light-silver);
      }
      span {
        color: var(--font-color-silver);
      }
    }

    &__qrcode {
      background-color: var(--color-white);
    }

    &__name {
      color: var(--font-color-light-silver  );
    }

    &__code {
      color: var(--font-color-white);
    }

  }

}
