  /* 首页 */
.jfk-pages__index {
  /* banner */
  .banners {
    width: 100%;
    &__item{
      &-mask{
        position: absolute;
        width: 100%;
        height: 100%;
        display: none;
      }
    }
    .jfk-swiper__item-box {
      padding-bottom: 50%;
      display: block;
    }
    .swiper-lazy-loaded,.jfk-image__lazy[lazy="loaded"]{
      .banners__item-mask{
        display: block;
      }
    }
    .swiper {
      &-container{
        height: 100%;
        margin-left: 0.9375rem;
      }
      &-pagination {
        color: #fff;
        padding-right: 15%;
        box-sizing: border-box;
        text-align: right;
        &-current{
          font-size: calc(32 / 24)em;
        }
      }
    }
  }
  /* 商品列表 */
  .good-layout {
    .good-lists {
      &__head {
        text-align: center;
        &-title {
          display: inline-block;
          line-height: 1;
          position: relative;
          padding: 0 calc(48 / 34 )em;
          &:before,&:after{
            content: '';
            position: absolute;
            width: 1px;
            height: calc(47 / 34)em;
            transform: rotate(45deg);
            z-index: 10;
          }
          &:before{
            bottom: 0;
            left: 0;
            transform-origin: bottom center;
          }
          &:after{
            right: 0;
            transform-origin: top center;
            top:  0;
          }
          .title-text{
            .jfk-font{
              font-size: 1em;
            }
          }

        }
        &-tip {
          .tip-number {
            padding: 0 px2rem(14);
            letter-spacing: 2px;
          }
          .tip-content {
            margin-top: px2rem(22);
            span {
              display: inline-block;
              vertical-align: middle;
            }
          }
        }
      }
      &__item {
        position: relative;
        width: 100%;
        .item-cont {
          text-decoration: none;
        }
        .goods {
          &-box,&-image-cont{
            height: 100%;
          }
        }
      }
    }
    /* 卡片式列表 */
    &--card {
      .good-lists {
        &__head {
          margin-top: px2rem(64);
          margin-bottom: px2rem(48);
        }
        &__item {
          padding-bottom: calc(322 / 690 * 100%);
          & + .good-lists__item {
            margin-top: calc(30 / 690 * 100%);
          }
          .item-cont {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
          }
          .goods {
            &-image {
              position: absolute;
              top: calc(16 / 322 * 100%);
              bottom: calc(16 / 322 * 100%);
              width: calc(300 / 690 * 100%);
              z-index: 1;
              overflow: hidden;
              &-cont {
                &[lazy="loaded"] {
                  &:before, &:after{
                    content: '';
                    width: 100%;
                    height: 100%;
                    position: absolute;
                    top: 0;
                    left: 0;
                    z-index: -1;
                  }
                  &:before{
                    background-color: #1f1f1f;
                    opacity: 0.2;
                  }
                  &:after{
                    background-image: linear-gradient(to left, rgba(7,7,7,0.4) 10%, rgba(0,0,0,0));
                    transform-origin: top left;
                    transform: skew(-23deg, 0deg);
                  }
                }
              }
            }
            &-info {
              position: absolute;
              top: 0;
              bottom: 0;
              width: calc(390 / 690 * 100%);
              right: 0;
              z-index: 2;
              &:before{
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                transform-origin: top right;
                transform: skew(-23deg, 0deg);
                z-index: -1;
              }
              &-cont {
                position: relative;
                width: 100%;
                box-sizing: border-box;
                padding-right: px2rem(26);
              }
            }
            &-title {
              line-height: 1.5625;
              padding: 0 px2rem(20) px2rem(16) px2rem(16);
              max-height: calc(1em * 3 * 1.5625);
              box-sizing: border-box;
              @mixin ellipsis 3;
            }
            &-price,&-number{
              margin-left: calc(-1 * px2rem(14));
            }
            &-button {
              position: absolute;
              right: px2rem(26);
              bottom: 0;
            }
          }
        }
      }
    }
    &--pic {
      .good-lists {
        &__head {
          margin-bottom: px2rem(60);
          margin-top: px2rem(72); 
        }
        &__item {
          .goods {
            &-box {
              position: relative;
            }
            &-image{
              width: 100%;
              &-cont {
                &[lazy="loaded"] {
                  &:before,&:after {
                    content: '';
                    position: absolute;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 100%;
                    z-index: 1;
                  }
                  &:before {
                    background-color: color(#1f1f1f a(25%));
                  }
                  &:after {
                    background-image: linear-gradient(to top, color(#1f1f1f a(90%)), rgba(0,0,0,0) 60%)
                  }
                }
              }
            }
            &-info {
              width: 100%;
              box-sizing: border-box;
              padding-left: calc(36 / 750 * 100%);
              padding-right: calc(30 / 750 * 100%);
              .goods-info--left {
                max-width: calc(450 / 690 * 100%);
              }
              .goods-control {
                width: calc(235 / 690 * 100%);
              }
              .goods-price {
                &-market,&-discount {
                  display: inline-block;
                  vertical-align: middle;
                }
                &-market {
                  margin-left: px2rem(5);
                  padding-right: px2rem(4);
                }
              }
            }
            &-title {
              @mixin ellipsis;
            }
          }
        }
      }
    }
  }
  .jfk-tab {
    padding-top: px2rem(44);
    &__head {

    }
  }
  .jfk-tabbar{
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 1000;
    width: 100%;
    height: px2rem(100);
  }
  .jfk-support{
    margin-bottom: px2rem(100);
  }
}