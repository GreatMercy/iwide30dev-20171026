.jfk-calendar {
  text-align: center;
  table {
    width: 100%;
    border-collapse: collapse;
    border-spacing: 0;
  }
  &__row {
    width: calc(1 / 7 * 100%);
  }
  &__tools {
    line-height: 1;
    height: calc(1 + 34 / 32)em;
    .switch-month {
      position: relative;
      display: inline-block;
      width: calc((77 * 2 + 16) / 610 * 100%);
      height: 1em;
      &:before, &:after {
        position: absolute;
        content: '';
        width: calc(20 / 32)em;
        height: calc(4 / 32)em;
        top: 50%;
        left: 50%;
      }
      &:before {
        transform: rotate(-45deg);
      }
      &:after {
        transform: rotate(45deg);
      }
      &.is-next {
        &:before {
          transform-origin:  right center;
        }
        &:after {
          transform-origin:  right center;
        }
      }
      &.is-prev {
        &:before {
          transform-origin:  left center;
        }
        &:after {
          transform-origin:  left center;
        }
      }
    }
    .title {
      display: inline-block;
      width: calc((610 - (77 * 2 + 16) * 2) / 610 * 100%);
    }
  }
  &__thead {
    line-height: calc((38 * 2 + 28) / 28);
    height: calc((38 * 2 + 28) / 28)em;
    @mixin one-line horizontal {
      left: 0;
      right: 0;
      bottom: 0;
    }
  }
  &__number{
    line-height: calc(78 / 30)em;
  }
  &__text {
    font-size: 1em;
  }
  &__value {
    font-size: calc(30 / 28)em;
    position: relative;
  }
  &__row {
    &.is-today {
      .jfk-calendar {
        &__number{
          color: inherit;
        }
      }
    }
    &.is-selected {
      .jfk-calendar {
        &__value {
          &:before {
            color: inherit;
            content: '';
            width: calc(76 / 30)em;
            height: calc(76 / 30)em;
            position: absolute;
            border-radius: 50%;
            background-color: currentColor;
            top: 50%;
            left: 50%;
            margin-top: calc(-38 / 30)em;
            margin-left: calc(-38 / 30)em;
            z-index: -1;
          }
        }
      }
    }
  }
}