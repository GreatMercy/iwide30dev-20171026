@import '../variable/light.postcss';

@define-mixin line-down $height: 2, $width: 100% {
  position: relative;
  @mixin-content;
  &:before{
    position: absolute;
    width: $(width);
    height: px2rem($(height));
    content: '';
    bottom: calc(-1 * px2rem($(height)));
    left: 0;
    background-color: var(--color-golden);
  }
}