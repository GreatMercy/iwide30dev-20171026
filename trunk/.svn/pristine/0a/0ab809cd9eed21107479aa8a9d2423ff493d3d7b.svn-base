                    $('#file').hide();
                    $('.add_img_box').delegate('.img_close','click',function(){
                        $(this).parent().parent().remove();
                        $('#file').show();
                        $("#file >input").val('');
                    })
                 }
                reader.readAsDataURL(file);
            }
        });

