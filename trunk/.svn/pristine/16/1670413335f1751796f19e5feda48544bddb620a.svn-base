/* 首页商品列表 */
.jfk-pages__home {
  .good-layout {
    .good-lists{
      &__head {
        &-title {
          &:before,&:after{
            background-color: color(#1a1a1a a(55%));
          }
          .title-text {
            color: var(--font-color-white);
          }
        }
      }
    }
    &--card {
      .good-lists{
        &__item {
          .goods {
            &-info {
              box-shadow: 0px 3px 21px 0px rgba(102, 102, 102, 0.15);
              background-color: #fff;
              &:before{
                background-color: #fff;
                box-shadow: -21px 18px 50px -20px rgba(102, 102, 102, 0.15);
              }
            }
          }
        }
      }
    }
    &--pic {
      .good-lists {
        &__item {
          .goods {
            &-info {
              background-color: #fff;
              padding-bottom: px2rem(38);
              padding-top: px2rem(30);
            }
            &-image {
              padding-bottom: calc(400 / 750 * 100%);
              position: relative;
              &-cont {
                position: absolute;
                top: 0;
                right: 0;
                width: 100%;
                height: 100%;
              }
            }
            &-title {
              padding-bottom: px2rem(8);
            }
            &-control {
              padding-top: px2rem(6);
            }
          }
        }
      }
    }
  }
  .jfk-tabbar{
    background-color: #fff;
    box-shadow: 0px 2px 12px 1px rgba(191, 191, 191, 0.15);
  }
}
