.jfk-radio {
  input[type="radio"] {
    visibility: hidden;
    appearance: none;
    display: none;
  }
  input[type="radio"]:disabled,&.is-disabled {
    pointer-events: none;
  }
  &--shape-rect{
    .jfk-radio__text {
      line-height: calc(40 / 30);
      box-sizing: border-box;
      display: block;
      width: 100%;
      text-align: center;
      min-width: calc(216 / 30)em;
      padding: px2rem((90 - 40) / 2) calc(28 / 30)em;
      position: relative;
      z-index: 20;
      span {
        text-align: left;
        display: inline-block;
      }
    }
    .jfk-radio__label {
      display: block;
      position: relative;
    }
    .jfk-radio__icon {
      position: absolute;
      bottom:0;
      right: 0;
      top: 0;
      left: 0;
      border: {
        radius: px2rem(var(--border-radius-big));
        width: 1px;
        style: solid;
      };
      overflow: hidden;
      z-index: 11;
      &:before {
        content: '';
        width: 0;
        height: 0;
        border: {
          style: solid solid dashed dashed;
          width: calc(28 / 30)em;
          color: currentColor currentColor transparent transparent;
        }
        top: 0;
        right: 0;
        z-index:1;
        position: absolute;
        visibility: hidden;
      }
      &-icon {
        font-size: calc(20 / 30)em;
        z-index: 1;
        position: absolute;
        top: .2em;
        right: .2em;
        visibility: hidden;
      }
    }
    input[type="radio"] {
      &:checked ~ .jfk-radio {
        &__icon {
          border-color: inherit;
          &:before {
            visibility: visible;
          }
          .jfk-radio__icon-icon {
            visibility: visible;
          }
        }
      }
    }
    &.is-checked {
      .jfk-radio {
        &__icon {
          border-color: inherit;
          &:before {
            visibility: visible;
          }
          .jfk-radio__icon-icon {
            visibility: visible;
          }
        }
      }
    }
  }
  &--shape-circle {
    .jfk-radio {
      &__label {
        padding-left: calc(35 / 28)em;
        position: relative;
      }
      &__icon {
        width: calc(26 / 28)em;
        height: calc(26 / 28)em;
        position: absolute;
        top: 50%;
        left: 0;
        transform: translate3d(0, -50%, 0);
        border-radius: 50%;
        line-height: calc(26 / 28)em;
        &-icon {
          position: absolute;
          top: 0;
          right: -0.1em;
          font-size: 1em;
          transform: scale(0.6);
          visibility: hidden;
        }
      }
    }
    input[type="radio"] {
      &:checked {
        & ~ .jfk-radio {
          &__icon {
            background-color: currentColor;
            border-color: currentColor;
            .jfk-radio__icon-icon {
              visibility: visible;
            }
          }
        }
      }
    }
    &.is-checked {
      .jfk-radio__icon {
        background-color: currentColor;
        border-color: currentColor;
        .jfk-radio__icon-icon {
          visibility: visible;
        }
      }
    }
  }
}