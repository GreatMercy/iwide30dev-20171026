export default {
  functional: true,
  render (h, ctx) {
    const { value, text, content } = ctx.props
    let _class = 'jfk-calendar__value font-color-white font-size--30'
    let _value = value
    if (text) {
      _class += ' jfk-calendar__text'
      _value = text
    }
    return (
      <div class="jfk-calendar__date">
        <div class="" class={_class}>{_value}</div>
        <div class="jfk-calendar__content">{content}</div>
      </div>
    )
  }
}
