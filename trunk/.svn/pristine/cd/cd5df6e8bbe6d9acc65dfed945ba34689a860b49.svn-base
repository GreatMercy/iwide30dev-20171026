                  range-separator=" 至 "
                  placeholder="选择日期范围">
                </el-date-picker>
              </div>
              <div style="float: right;">
                <el-button type="primary" @click="search"  class="jfk-button--small coupon-search-button" size="large">查询</el-button>
                <a :href="couponItems.page_resource.links.edit"><el-button type="" class="jfk-button--small establish-task-button" size="large">+创建批量任务</el-button></a>
              </div>
            </el-row>
            <el-table
              v-loading="couponItems.loading"
              style="width: 100%;"
              :data="couponItems.data"
              stripe>
                <el-table-column
                  prop="0"
                  label="任务名称">
                </el-table-column>
                <el-table-column
                  prop="1"
                  width="116"
                  label="发送时间">
                </el-table-column>
                <el-table-column
                  prop="2"
                  label="发送内容">
                </el-table-column>
                <el-table-column
                  prop="3"
                  label="礼包 / 优惠券">
                </el-table-column>
                <el-table-column
                  prop="4"
