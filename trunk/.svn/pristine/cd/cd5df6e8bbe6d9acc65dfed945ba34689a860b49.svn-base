                  label="发送人数">
                </el-table-column>
                <el-table-column
                  prop="6"
                  label="发送状态">
                </el-table-column>
                <el-table-column
                  prop="7"
                  label="发送失败人数">
                </el-table-column>
                <el-table-column
                  prop="8.nickname"
                  label="操作人">
                </el-table-column>
                <el-table-column label="操作">
                <template scope="scope">
                  <a v-show="scope.row['is_edit'] === 3" @click="goHref(scope.row[9])">
                    <el-button
                      size="small"
                      type=""
                      class="coupon-list-detail">查看详情</el-button>
                  </a>
                  <span v-show="scope.row['is_edit'] === 1">
                     <a @click="goDelete(scope.row[9], scope.$index, scope.row)">
                       <el-button
                        size="small"
                        type=""
                        class="coupon-list-detail">删除
                      </el-button>
                     </a>
                     <a href="javascript:;" @click="goEdit(scope.row[9])">
                       <el-button
                        size="small"
                        type=""
                        class="coupon-list-detail">修改
                      </el-button>
                     </a>
                  </span>
                </template>
              </el-table-column>
            </el-table>
            <div class="block" style="margin-top:30px;">
             <el-pagination
                @current-change="current"
                :page-size="couponItems.page_resource.size"
                layout="total, prev, pager, next, jumper"
                :total="couponItems.page_resource.count">
              </el-pagination> 
            </div>
        </div>
    </template>
    </div>
  </div>
</template>
<script>
  import store from './store/main'
  import { getRequestDetele } from '@/service/user/http'
  export default {
    data () {
      return {
        couponItems: store.state,
        time: '',
        getTime: ['', ''],
        keyword: ''
      }
    },
    methods: {
      search () {
        let getData = {
          task_name: this.keyword,
          start_time: this.getTime[0],
          end_time: this.getTime[1],
          p: this.couponItems.page_resource.page
        }
        store.getDetail(getData)
      },
      current (e) {
        this.couponItems.page_resource.page = e
        this.search()
      },
      setTime (value) {
        this.getTime = value.split(' 至 ')
      },
      goHref (value) {
        window.location.href = this.couponItems.page_resource.links.item + '?Id=' + value
      },
      goDelete (value, index, row) {
        let that = this
        this.$confirm('此操作将永久删除该数据, 是否继续?', '提示', {
          confirmButtonText: '确定',
          cancelButtonText: '取消',
          type: 'warning'
        }).then(() => {
          let setDate = {
            id: value
          }
          getRequestDetele(setDate).then(function (res) {
            if (res.status === 1000) {
              that.$message({
                type: 'success',
                message: '删除成功!'
              })
              that.search()
            }
          })
        })
      },
      goEdit (value) {
        window.location.href = this.couponItems.page_resource.links.item + '?Id=' + value
      }
    },
    mounted () {
      store.getDetail()
    }
  }
</script>
