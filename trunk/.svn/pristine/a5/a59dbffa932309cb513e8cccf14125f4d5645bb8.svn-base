.jfk-notification {
  position: fixed;
  left: 0;
  top: px2rem(20);
  width: 100%;
  overflow: hidden;
  z-index: 999;

  &_content {
    border-radius: px2rem(var(--border-radius-big));
    justify-content: center;
    padding-top: calc(10 / 24)em;
    padding-bottom: calc(10 / 24)em;
    span {
      font-size: calc(30 / 24)em;
    }
    i {
      font-size: 1em;
      margin-left: calc(14 / 24)em;
    }

  }
}