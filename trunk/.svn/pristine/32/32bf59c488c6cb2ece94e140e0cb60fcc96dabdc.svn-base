/* display */
.jfk-flex{
  display: flex;
  @each $key, $val in (start, end, center, space-around, space-between), (flex-start, flex-end, center, space-around, space-around) {
    &.is-justify-$(key) {
      justify-content: $(val);
    }
  }
  @each $key, $val in (top, middle, bottom), (flex-start, center, flex-end) {
    &.is-align-$(key) {
      align-items: $(val);
    }
  }
}

/* float */
.jfk-fl-l{
  float: left;
}
.jfk-fl-r{
  float: right;
}
.jfk-clearfix {
  &:before,&:after{
    display: table;
    content: '';
  }
  &:after {
    clear: both;
  }
}

/* text-align */
.jfk-ta-c {
  text-align: center;
}
.jfk-ta-l {
  text-align: left;
}
.jfk-ta-r {
  text-align: right;
}
/*20号字体*/
.font-size--20{
  font-size: px2rem(40);
  transform: scale(.5);
}
/* font-size */
@each $size in var(--size-queue) {
  .font-size--$(size) {
    font-size: px2rem($size)
  }
}

/* padding margin */
@each $key, $val in var(--direction) {
  .jfk-p$(key)-30 {
    padding-$(val): px2rem(30);
  }
}
