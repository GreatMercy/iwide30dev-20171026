import * as apiConfig from './api'
import ajax from '@/utils/http'
/**
 * 获取商品首页信息
 * @param  {Object} data    请求参数
 * @param  {Number} [data.page] 页数
 * @param  {Number} [data.page_size=20] 每一页的个数
 * @param  {Number} [data.show_ads_cat=2] 是否显示广告与分类 1显示 2不显示
 * @param  {Number} [data.fcid] 分类ID
 * @param  {Object} [config]  axios配置
 * @param  {String} [version='v1'] API版本
 * @return {Object}         首页信息
 */
const getGoodLists = (data, config, version = 'v1') => {
  let url = apiConfig[version] && apiConfig[version].GET_GOODS_LIST || apiConfig.v1.GET_GOODS_LIST
  return ajax.get(url, data, config)
}
/**
 * 获取商品详情
 * @param  {Object} data    请求参数
 * @param  {String} data.pid 商品id
 * @param  {Object} [config]  axios配置
 * @param  {String} [version='v1'] api版本
 * @return {Object}         返回商品详情
 */
const getGoodData = (data, config, version = 'v1') => {
  let url = apiConfig[version] && apiConfig[version].GET_GOOD_DATA || apiConfig.v1.GET_GOOD_DATA
  return ajax.get(url, data, config)
}
const getGoodRecommendation = (data, config, version = 'v1') => {
  let url = apiConfig[version] && apiConfig[version].GET_GOOD_RECOMMENDATION || apiConfig.v1.GET_GOOD_RECOMMENDATION
  return ajax.get(url, data, config)
}
export { getGoodLists, getGoodData, getGoodRecommendation }
