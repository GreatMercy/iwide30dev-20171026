.jfk-clock {
  line-height: 1;
  text-align: center;
  letter-spacing: -0.31em;
  text-rendering: optimizespeed;
  span,i {
    letter-spacing: normal;
  }
  .dates {
    font-style: normal;
    display: inline-block;
  }

  .dates,.hours,.minutes,.seconds{
    border-radius: px2rem(7);
    width: calc(56 / 2 / 17)em;
    height: calc(50 / 2 / 17)em;
    line-height: calc(50 / 2 / 17)em;
    text-align: center;
    position: relative;
    background: #222;
    color: #fff;
  }
  .dates-area, .hours,.minutes,.seconds{
    margin-left: calc(32 / 2 / 17)em;
    font-size: calc(34 / 2 / 12)em;
  }
  .dates-area + .hours {
    margin-left: calc(20 / 2 / 17)em;
  }
  .hours, .minutes{
    &:before,&:after{
      position: absolute;
      content: '';
      width: calc(2 / 17)em;
      height: calc(2 / 17)em;
      right: calc((32 + 8) / 2 / 17 * -0.5)em;
    }
    &:before{
      top: calc(16 / 17)em;
    }
    &:after{
      bottom: calc(16 / 17)em;
    }
  }
  .status {
    margin-left: px2rem(14)
  }
  .dates {
    margin-right: px2rem(14);
  }
}