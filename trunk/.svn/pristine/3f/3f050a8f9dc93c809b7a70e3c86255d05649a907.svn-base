.jfk-pages__order-center {
  .jfk-pages__theme {
    background-color: var(--good-tag-color);
  }
  .order-center-tab {
    &__item {
      color: var(--font-color-extra-light-gray);
      &::before {
        background-color: var(--line-color-extra-light-silver);
      }
    }

    &__active {
      color: var(--tab-selected-font-color);
      @mixin line-down 8, 72.5px, null, after {
      }
      &:after {
        left: 50%;
        transform: translate(-50%, 0);
        height: 1px;
        bottom: px2rem(-19);
      }
    }
  }

  .order-center__null {
    color: var(--font-color-light-gray);
    p {
      color: var(--font-color-light-gray);
    }
  }


  .order-list {

    &__loading {
      color: var(--tab-selected-font-color);
    }

    li {
      &::before {
        background-color: var(--line-color-light-silver);
      }
    }

    &__order-id {
      color: var(--font-color-extra-light-gray);
    }

    &__status {
      color: var(--tab-selected-font-color);
      .jfk-font {
        text-shadow: 0 0 0 var(--tab-selected-font-color);
      }
    }

    &__name {
      color: var(--font-color-white);
    }

    &__number {
      color: var(--button-disabled-color);
      span {
        color: var(--font-color-silver);
      }
    }

  }

}
