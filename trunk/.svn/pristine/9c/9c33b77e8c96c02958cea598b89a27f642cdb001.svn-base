.jfk-radio {
  &--shape-rect{
    .jfk-radio {
      &__icon {
        border-color: #bfbfbf;
        .icon {
          color: #fff;
        }
      }
      &__text {
        color: #808080;
      }
    }
    input[type="radio"] {
      &:checked ~ .jfk-radio {
        &__text {
          color: inherit;
        }
      }
      &:disabled ~ .jfk-radio {
        &__icon {
          border-color: #dfdfdf;
        }
        &__text {
          color: #bfbfbf;
        }
      }
      &:disabled:checked ~ .jfk-radio {
        &__icon {
          &:before {
            border-color: #dfdfdf #dfdfdf transparent transparent;
          }
        }
      }
    }
    &.is-disabled {
      .jfk-radio {
        &__icon {
          border-color: #dfdfdf;
        }
        &__text {
          color: #bfbfbf;
        }
      }
    }
    &.is-disabled.is-checked {
      .jfk-radio {
        &__icon {
          &:before {
            border-color: #dfdfdf #dfdfdf transparent transparent;
          }
        }
      }
    }
  }
}

/* 在弹框上的 */
.jfk-popup {
  .jfk-radio {
    &--shape-rect {
      input[type="radio"] {
        &:disabled ~ .jfk-radio {
          &__icon {
            border-color: #363636;
            background-color: #333;
            z-index: -1;
          }
          &__text {
            color: #505050;
          }
        }
        &:disabled:checked ~ .jfk-radio {
          &__icon {
            &:before {
              border-color: #363636 #363636 transparent transparent;
            }
            .icon {
              color: #1f1f1f
            }
          }
        }
      }
      &.is-disabled {
        .jfk-radio {
          &__icon {
            border-color: #363636;
            background-color: #333;
            z-index: -1;
          }
          &__text {
            color: #505050;
          }
        }
      }
    }
  }
}