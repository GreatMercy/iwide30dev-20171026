/* 价格，数字与小数点为外层的1em大小，币种符号为外层的0.48em大小*/
.jfk-price {
  letter-spacing: -0.31em;
  > i{
    display: inline-block;
  }
  &__number{
    letter-spacing: 0.0741em;
    font-size: 1em;
  }
  &__currency {
    letter-spacing: normal;
    padding-right: 0.1666em;
    font-size: 0.5185em;
    vertical-align: 0.2em;
  }
}