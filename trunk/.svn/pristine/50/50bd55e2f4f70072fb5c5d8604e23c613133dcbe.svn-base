:root {
  /*主色*/
  --color-golden: #b2945e;
  --color-pale-yellow: #dac576;
  --color-deep-yellow: #8b734f;

  /*辅助色*/
  --color-danger: #a81c1c;
  --color-warning: #9e5228;
  --color-light-black: #161616;
  --color-white: #fff;

  /*文字色*/
  --font-color-white: #fff;
  --font-color-dark-white: #e7e6e6;
  --font-color-extra-light-gray: #bfbfbf;
  --font-color-light-gray: #808080;
  --font-color-silver: #333;
  --font-color-light-silver: #666;

  /*分割线与弹窗色值*/
  --line-color-light-silver: #363636;
  --line-color-extra-light-silver: #3a3a3a;
  --line-color-gray: #505050;
  --line-color-extra-light-black: #282828;

  /* 按钮 */
  --button-base-height: 90;
  --button-higher-height: 100;
  --button-border-radius: 0; 
  /*默认*/
  --button-default-fill-color: transparent;
  --button-default-color: #bfbfbf;
  --button-default-border: #bfbfbf;

  /* primary */
  --button-primary-fill-color: #b2945e;
  --button-primary-color: #fff;
  --button-primary-border: #b2945e;
  --button-primary-plain-color: #fff;


  /* ghost */
  --button-ghost-fill-color: transparent;
  --button-ghost-color: #b2945e;
  --button-ghost-border: transparent;

  /* disabled */
  --button-disabled-color: #808080;
  --button-disabled-border: #333;
  --button-disabled-fill-color: #333;

  /* 默认背景图片颜色 */
  --default-image-fill-color: #1a1a1a;

  /* tab颜色 */
  --tab-separate-line-color: #2f2f2e;
  --tab-font-color: #fff;
  --tab-icon-color: #fff;
  --tab-selected-font-color: #fff;
  --tab-selected-icon-color: #fff;

  /* goods tag颜色 */
  --good-tag-color: #fff;

  /* 弹框 */
  --popup-mask-fill-color: rgba(0,0,0,.85);
  --popup-fill-color: #282828;
  --popup-close-color: #474747;

  /* 推荐位 */
  --recommendation-empty-fill-color: color(#1f1f1f a(75%));
  --recommendation-gap-line-color: #808080;
}