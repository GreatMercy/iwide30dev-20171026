:root {
  /*主色*/
  --color-golden: #b2945e;
  --color-pale-yellow: #dac576;
  --color-deep-yellow: #8b734f;

  /*辅助色*/
  --color-danger: #a81c1c;
  --color-warning: #9e5228;
  --color-light-black: #161616;
  --color-white: #fff;

  /*文字色*/
  --font-color-white: #fff;
  --font-color-dark-white: #e7e6e6;
  --font-color-extra-light-gray: #bfbfbf;
  --font-color-light-gray: #808080;
  --font-color-silver: #333;
  --font-color-light-silver: #666;

  /*分割线与弹窗色值*/
  --line-color-light-silver: #363636;
  --line-color-extra-light-silver: #3a3a3a;
  --line-color-gray: #505050;
  --line-color-extra-light-black: #282828;
  /* 按钮 */
  --button-primary-fill: #b2945e;
  --button-primary-color: #fff;
  --button-primary-border: #b2945e;

  --button-default-fill: transparent;
  --button-default-color: #fff;
  --button-default-border: #b2945e;

  --button-border-radius: 0px;

  --button-border: #b2945e;
  --button-fill: #161616;
  --button-times-color: #fff;
  --button-times-border: #fff;

  /* 默认背景图片颜色 */
  --image-background-color: #1a1a1a;

  /* tab颜色 */
  --tab-separate-line-color: #2f2f2e;
  --tab-font-color: #fff;
  --tab-icon-color: #fff;
  --tab-selected-font-color: #fff;
  --tab-selected-icon-color: #fff;

  /* goods tag颜色 */
  --good-tag-color: #fff;
}