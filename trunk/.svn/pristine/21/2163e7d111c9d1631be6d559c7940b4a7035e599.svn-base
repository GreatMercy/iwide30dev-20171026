html,body{
    height: 100%;
}
.jfk-pages__invalid{
    min-height: 100%;
    height: auto!important;
    position: relative;
    .invalid_content{
        padding-top: 115px;
        padding-bottom: 300px;
        .invalid_icon{
            text-align: center;
            i{
                font-size: 75px;
            }
            
        }
        p{
            font-size: 14px;
            text-align: center;
            margin-top: 25px;
        }

    }
    .recommendation{
        position: absolute;
        bottom: 18px;
        width: 100%;
        left: 0;
        clear: both;
        box-sizing: border-box;
        .swiper-container{
            width: 100%;
        }
        .tip{
            padding-top: 1.875rem;
            padding-bottom: 1.46875rem;
        }
  
    }
}
