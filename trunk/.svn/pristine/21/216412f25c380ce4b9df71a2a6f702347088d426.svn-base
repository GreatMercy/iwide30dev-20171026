.jfk-pages__myorder {
  padding: px2rem(60) px2rem(30);

  .order_list {
    &_item {
      padding-left: px2rem(40);
      margin-bottom: px2rem(64);
      overflow: hidden;
      @mixin one-line horzin {
      };
      position: relative;
      &::before {
        width: 100%;
        position: absolute;
        bottom: 0;
        left: 0;
      }
      & .status {
        @mixin one-line vertical {
        };
        position: relative;
        &::before {
          width: 3px;
          position: absolute;
          top: 20%;
          left: px2rem(-30);
          height: 70%;
        }
      }
      & .title {
        margin-bottom: px2rem(40);
      }

      & .room_detail {
        & .item:first-child {
          margin-bottom: px2rem(20);
        }
        & .item:nth-child(2) {
          margin-bottom: px2rem(50);
          span {
            margin-left: px2rem(5);
            margin-right: px2rem(40);
            font-weight: bold;
          }
        }
      }

      & .price {
        font-size: px2rem(22);
        margin-bottom: px2rem(70);
      }

      & .count_down {
        margin-bottom: px2rem(50);
        font-size: px2rem(22)

      }

      .btn_container {
        &.pay_now {
          position: absolute;
          bottom: px2rem(0);
          right: px2rem(30);
        }
        float: right;
        margin-bottom: px2rem(50);
        .order_btn {
          width: px2rem(180);
          height: px2rem(60);
          line-height: px2rem(60);
          display: inline-block;
          text-align: center;
          color: #fff;
          background-color: red;
          border-radius: 3px;
        }
        .order_btn.whiteColor {
          background-color: #fff;
          border: 1px solid #1a1a1a;
          color: #1a1a1a;
        }
        & .comment, & .return {
          display: inline-block;
          width: px2rem(160);
          height: px2rem(60);
          line-height: px2rem(60);
          text-align: center;
        }
        & .comment {
          @mixin one-line vertical {
          };
          position: relative;
          &::before {
            width: 1px;
            height: 50%;
            position: absolute;
            top: 30%;
            right: 0;
          }
        }
      }
    }
  }

}























