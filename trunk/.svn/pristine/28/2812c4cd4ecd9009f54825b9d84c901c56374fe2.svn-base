.jfk-pages__detail {
  .banners{
    .jfk-swiper__item-box{
      padding-bottom: 100%;
    }
    .swiper-pagination{
      color: #fff;
      text-align: right;
      padding-right: calc(34 / 750 * 100%);
      box-sizing: border-box;
      &-current{
        font-size: calc(38 / 24)em;
      }
    }
  }
  .detail-top{
    position: relative;
    .icons{
      color: #fff;
      position: absolute;
      top: 12px;
      right: 11px;
      text-align: right;
      z-index: 10;
      .jfk-font{
        padding: 5px;
        & + .jfk-font{
          margin-left: 11px;
        }
      }
    }
  }
  /*推荐*/
  .recommendation{
    a {
      text-decoration: none;
    }
    .jfk-swiper{
      &__item{
        border-radius: px2rem(7);
        overflow: hidden;
        &-box{
          padding-bottom: calc(270 / 280 * 100%);
        }
      }
    }
    &-mask {
      position: relative;
      height: 100%;
      &:before{
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        position: absolute;
        content: '';
      }
      &:before{
        background-color: color(#262626 a(20%))
      }
    }
    &-info{
      padding: 0 calc(32 / 280 * 100%);
      display: flex;
      align-items: center;
      height: px2rem(127);
      background-color: #fff;
      .info-box{
        width: 100%;
      }
      .title{
        @mixin ellipsis;
        line-height: 1;
        padding-bottom: calc(18 / 24)em;
      }
      .price{
        line-height: 1;
      }
      .jfk-price__original{
        margin-left: calc(10 / 24)em;
        &:before{
          left: .2em;
        }
      } 
    }
  }
  .jfk-support{
    margin-bottom: px2rem(100);
  }
  /*底部*/
  .footer{
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 1000;
    width: 100%;

    .links{
      width: calc(340 / 750 * 100%);
      .jfk-flex{
        height: px2rem(100);
      }
    }
    .link{
      flex-grow: 1;
      text-align: center;
      text-decoration: none;
      .text{
        line-height: 1;
      }
    }
    .control{
      width: calc(410 / 750 * 100%);
      height: px2rem(100);
      .jfk-button{
        line-height: px2rem(100);
      }
    }
  }

}