.jfk-pages__detail{
  .hotel-staff {
    background-color: #27282d;
  }
  .footer{
    background-color: #fff;
  }
  .info {
    background-color: #fff;
    padding-top: px2rem(42);
    .date-norm {
      @mixin one-line vertical, calc(144 / 24)em {
        background-color: #bfbfbf;
        transform: scale(1, .5) rotate(15deg);
        transform-origin: bottom;
        left: 0;
        bottom: .5em;
      }
    }
    .triangle {
      color: #bfbfbf;
    }
  }
  .killsec{
    background-color: #fff;
    box-shadow: 0 px2rem(3) px2rem(21) color(#666 a(15%));
    &-box {
      margin-top: px2rem(48);
    }
    .process {
      .line {
        background-color: #bfbfbf;
      }
    }
    .layer {
      width: calc(407 / 595 * 100%);
      height: 100%;
      position: absolute;
      z-index: 2;
      top: 0;
      left: 0;
      &:after{
        content: '';
        position: absolute;
        width: calc(82 / 407 * 100%);
        right: 0;
        top: 0;
        bottom: 2px;
        transform: skew(-18deg, 0deg);
        transform-origin: bottom left;
        z-index: 1;
        background-color: #fff;
        box-shadow: 0 2px px2rem(20) rgba(0,0,0,.15);
      }
      &:before{
        content: '';
        position: absolute;
        height: 100%;
        width: 100%;
        z-index: 1;
        top: 0;
        left: 0;
        z-index: 2;
        background: #fff
      }
    }
    .mask {
      background: {
        image:  background-image(/detail_killsec_white.png, theme);
      }
    }
  }
  .productinfo-detail-label {
    background-color: #fff;
    .label {
      &.is-selected {
        div {
          margin: 0 px2rem(14);
          @mixin line-down 2;
        }
      }
      & + .label {
        &:after {
          background-color: #ebebeb;
        }
      }
    }
  }
  .jfk-popup__specTicket {
    .section-title{
      &:before {
        background-color: #ebebeb;
      }
    }
  }
  .good-spec__footer {
    background-color: #fff;
  }
  /*服务*/
  .service {
    .icon {
      color: #666;
    }
    .label {
      color: #666;
    }
  }
  .jfk-popup__service {
    .popup-service-item {
      color: #808080;
    }
    .label {
      color: #333;
    }
  }
  .detail-box{
    background-color: #fff;
  }
  .killsec-original{
    &:before {
      background-color: #ebebeb;
    }
  }
  .hotel {
    .box {
      background: {
        image: background-image(/detail_map_white.jpg, theme);
      }
    }
  }
}