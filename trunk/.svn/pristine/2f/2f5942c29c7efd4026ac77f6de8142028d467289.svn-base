.jfk-support {
  padding-bottom: px2rem(58);
  padding-top: px2rem(146);
  &__box {
    position: relative;
    text-align: center;
    line-height: 1;
    &:before, &:after {
      content: '';
      position: absolute;
      height: 1px;
      transform: scale(1, 0.5);
      opacity: 0.4;
      width: px2rem(48);
      top: 50%;
    }
    &:before {
      left: 15%
    }
    &:after {
      right: 15%
    }
  }
  &__logo {
    font: 0/0 'a';
    overflow: hidden;
    margin-bottom: px2rem(14);
    width: px2rem(231);
    height: px2rem(46);
    background-size: 50%;
    background-repeat: no-repeat;
    background-position: center;
    background-image: url(../../assets/jperation.png);
    display: inline-block;
  }
  &__info {
    font-size: px2rem(40);
    transform: scale(0.5);
    line-height: 1;
    color: #333;
    opacity: 0.7;
  }
}