.jfk-pages__detail {
  .banners{
    .jfk-swiper__item-box{
      padding-bottom: 100%;
    }
    .swiper-pagination{
      color: #fff;
      text-align: right;
      padding-right: calc(34 / 750 * 100%);
      box-sizing: border-box;
      &-current{
        font-size: calc(38 / 24)em;
      }
    }
  }
  .detail-top{
    position: relative;
    .icons{
      color: #fff;
      position: absolute;
      top: 12px;
      right: 11px;
      text-align: right;
      z-index: 10;
      .jfk-font{
        padding: 5px;
        & + .jfk-font{
          margin-left: 11px;
        }
      }
    }
  }
  .hotel-staff {
    line-height: calc(39 / 24);
    padding-top: px2rem(18);
    padding-bottom: px2rem(30);
    .cont{
      text-indent: -1.5em;
      padding-left: 1em;
    }
    .number {
      line-height: 1;
      padding: 0 calc(10 / 48)em;
      vertical-align: -.24em;
      color: #fff;
    }
    .notice-icon-1,.notice-icon {
      text-shadow: 0 0 1em currentColor;
    }
    .notice-icon-1 {
      margin-left: -.4em;
      animation-name: staff-notice;
      animation-iteration-count: 3;
      animation-duration: .7s;
      animation-timing-function: ease;
      animation-play-state: running;
    }
    .unit {
      padding-right: .2em;
      color: #fff;
    }
  }
  .recommendation {
    .tip {
      padding: {
        top: px2rem(60);
        bottom: px2rem(47);
      }
    }
  }
  .info {
    padding: {
      left: px2rem(80);
      right: px2rem(80);
    }
    .name {
      line-height: calc(55 / 38);
      @mixin ellipsis 2;
    }
    .sales {
      margin-top: calc(18 / 24)em;
      margin-bottom: calc(10 / 24)em;
      .suppier {
        @mixin one-line {
          height: auto;
          top: 25%;
          bottom: 25%;
          right: 0;
          background-color: currentColor;
        }
        padding-right: calc(28 / 24)em;
        margin-right: calc(18 / 24)em;
      }
      .number {
        padding-left: calc(12 / 24)em;
      }
    }
    .price-tag {
      display: inline-block;
      margin-right: calc(14 / 24)em;
      color: #fff;
      text-shadow: 0px 0px 7px rgba(41, 33, 20, 0.81);
      letter-spacing: -.1em;
      padding: 0 calc(10 / 24)em;
      line-height: calc(36 / 24);
      vertical-align: .2125em;
      position: relative;
      .mask {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: currentColor;
        z-index: -1;
        border-radius: px2rem(var(--border-radius-small));
      }
    }
    .product-price-package,.product-price-market {
      display: inline-block;
    }
    .product-price-market {
      vertical-align: .3em;
    }
    .date-norm{
      padding-top: calc(36 / 24)em;
      padding-bottom: calc(24 / 24)em;
      padding-left: px2rem(70);
      .triangle{
        vertical-align: middle;
        padding-left: calc(5 / 24)em;
      }
    }
  }
  .jfk-support{
    margin-bottom: px2rem(100);
  }
  /*底部*/
  .footer{
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 1000;
    width: 100%;

    .links{
      width: calc(340 / 750 * 100%);
      .jfk-flex{
        height: px2rem(100);
      }
    }
    .link{
      flex-grow: 1;
      text-align: center;
      text-decoration: none;
      .text{
        line-height: 1;
      }
    }
    .control{
      width: calc(410 / 750 * 100%);
      letter-spacing: .1em;
    }
  }
}
@keyframes staff-notice {
  0% {
    opacity: 0
  }
  100% {
    opacity: 1
  }
}