  .jfk-pages__hotelDetailint{
    padding: 0 px2rem(30);
  
    .ht_del_top{
      padding-top: px2rem(30);
      &_info{
        height: px2rem(200);
        background-image: background-image(/detail_map_white.jpg);
        background-size: 100% 100%;
        padding: px2rem(70) px2rem(40) 0 px2rem(40);
        position: relative;
        & .info_title{
          margin-bottom: px2rem(40);
          @mixin ellipsis 1;
          width: px2rem(420);
        }

        & .info_place{
          width: px2rem(420);
        }

        & .icon_dh{
          position: absolute;
          right: px2rem(60);
          bottom: px2rem(80);
          i{
            margin-left: px2rem(8);
          }
        }
      }
      & .ht_tel{
        padding: px2rem(55) px2rem(40);
        position: relative;
        & span{
          display: inline-block;
          width: 90%;
          @mixin one-line vertical {};
          position:relative;
            &::before {
             position: absolute;
             bottom: 0;
             right: 0;
          }
        }
        & .icon_tel {
          position: absolute;
          right: px2rem(60);
        }
      }
    }
    
    .ht_service{
      margin-top: px2rem(20);
      & .title{
        height: px2rem(100);
        line-height: px2rem(100);
      }
    }
    
    .ht_service_style{
      margin-bottom: px2rem(40);
      &_btn{
        width: px2rem(120);
        height: px2rem(40);
        line-height: px2rem(40);
        display: inline-block;
        text-align:center;
        margin-bottom: px2rem(20);
      }
    }
    
  .ht_del_ul_container{
      @mixin one-line horzin {};
      position:relative;
        &::before {
         position: absolute;
         bottom: 0;
         left: 0;
        }
      .ht_del_ul{
        height: auto;
        overflow: hidden;
        padding-bottom: px2rem(30);
        padding-top: px2rem(30);
        @mixin one-line horzin {};
        position:relative;
        &::before {
        position: absolute;
        bottom: 0;
        left: 0;
        }
        & li{
          text-align: left;
          float: left;
          width: 33%;
          height: px2rem(48);
          margin-bottom: px2rem(30);

          & i {
            margin-right: px2rem(6);
          }
        }
      }
    }
  
  .ht_int{
    margin-bottom: px2rem(30);
    &_title{
      height: px2rem(100);
      line-height: px2rem(100);

    }
  }

  }






































