.jfk-msgbox {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate3d(-50%, -50%, 0);
  border-radius: px2rem(var(--border-radius-big));
  -webkit-user-select: none;
  overflow: hidden;
  backface-visibility: hidden;
  transition: .2s;
  width: calc(690 / 750 * 100%);
  text-align: center;
  box-sizing: border-box;
  padding: 0 px2rem(52) px2rem(67) px2rem(52);
  &.is-icon {
    &.is-title {
      .jfk-msgbox {
        &__icon {
          height: px2rem(144);
        }
        &__header {
          padding-bottom: px2rem(50);
        }
        &__btns {
          padding-top: px2rem(58);
        }
      }
    }
    &.no-title {
      .jfk-msgbox{
        height: px2rem(200);
      }
    }
  }
  &.no-icon {
    &.is-title{
      .jfk-msgbox {
        &__header {
          padding-top: px2rem(76);
          padding-bottom: px2rem(60);
        }
      }
    }

  }
  &__content {
    line-height: calc(48 / 28);
  }
  &__header{
    line-height: 1;
  }
  &__btns {
    padding-top: px2rem(76);
  }
  &__btn {
    
  }
  &__icon {
    line-height: 1;
    display: inline-block;
    padding-top: px2rem(140);
  }
  &-bounce-enter {
    opacity: 0;
    transform: translate3d(-50%, -50%, 0) scale(0.7);
  }
  &-bounce-leave-active {
    opacity: 0;
    transform: translate3d(-50%, -50%, 0) scale(0.9);
  }
}
.jfk-modal {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}
.jfk-modal-enter {
  animation: jfk-modal-in .2s ease;
}
.jfk-modal-leave {
  animation: jfk-modal-out .2s ease forwards;
}
@keyframes jfk-modal-in {
  0% {
    opacity: 0;
  }
  100% {
  }
}
@keyframes jfk-modal-out {
  0% {
  }
  100% {
    opacity: 0;
  }
}
