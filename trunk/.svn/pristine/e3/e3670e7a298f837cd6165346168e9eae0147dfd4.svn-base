.jfk-popup {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate3d(-50%, -50%, 0);
  backface-visibility: hidden;
  transition: .2s ease-out;
  border-radius: px2rem(var(--border-radius-big));
  max-height: calc(100% - px2rem(70));
  &__close {
    position: absolute;
    top: px2rem(30);
    right: px2rem(30);
  }
  &__top {
    top: 0;
    right: auto;
    bottom: auto;
    left: 50%;
    transform: translate3d(-50%, 0, 0);
  }
  &__right {
    top: 50%;
    right: 0;
    bottom: auto;
    left: auto;
    transform: translate3d(0, -50%, 0);
  }
  &__bottom {
    top: auto;
    right: auto;
    bottom: 0;
    left: 50%;
    transform: translate3d(-50%, 0, 0);
  }
  &__bottom-full {
    top: auto;
    right: px2rem(30);
    bottom: px2rem(30);
    left: px2rem(30);
    transform: translate3d(0, 0, 0);
  }
  &__left {
    top: 50%;
    right: auto;
    bottom: auto;
    left: 0;
    transform: translate3d(0, -50%, 0);
  }
}
.popup-slide-top-enter,
.popup-slide-top-leave-active {
  transform: translate3d(-50%, -100%, 0);
}

.popup-slide-right-enter,
.popup-slide-right-leave-active {
  transform: translate3d(100%, -50%, 0);
}

.popup-slide-bottom-enter,
.popup-slide-bottom-leave-active {
  transform: translate3d(-50%, 100%, 0);
}
.popup-slide-bottom-full-enter,
.popup-slide-bottom-full-leave-active {
  transform: translate3d(0, 100%, 0);
}
.popup-slide-left-enter,
.popup-slide-left-leave-active {
  transform: translate3d(-100%, -50%, 0);
}

.popup-fade-enter,
.popup-fade-leave-active {
  opacity: 0;
}

.jfk-modal {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.jfk-modal-enter {
  animation: jfk-modal-in .2s ease;
}

.jfk-modal-leave {
  animation: jfk-modal-out .2s ease forwards;
}

@keyframes jfk-modal-in {
  0% {
    opacity: 0;
  }
  100% {
  }
}

@keyframes jfk-modal-out {
  0% {
  }
  100% {
    opacity: 0;
  }
}


