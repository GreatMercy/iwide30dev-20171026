<script>
    $(function(){
        var $conf_form = $('#conf_form');
        var $conf_submit = $('#conf_submit');

        $conf_submit.on('click',function(){
            $.ajax({
                type: "post",
                url: "<?php echo base_url('index.php/membervip/sign/ajax_post'); ?>",
                data: $conf_form.serialize(),
                dataType: "json",
                success: function(data){
                    if(data.err){
                        alert(data.msg);
                        return false;
                    }

                    alert('保存成功');
                    location.reload();
                }
            });

            return false;
        });
    });
</script>
