.jfk-pages__gift-list {

  .gift-list {

    &-item {
      padding-top: px2rem(35);
      padding-bottom: px2rem(35);
      padding-left: px2rem(10);
      padding-right: px2rem(10);
      border-top: 1px solid #dcdcdc;

      &__header {
        height: px2rem(70);
        width: px2rem(70);
        border-radius: 50%;
        background-color: #dcdcdc;
        margin-right: px2rem(76);
      }

      &__info {
        p {
          line-height: 1;
          &:first-child {
            margin-bottom: px2rem(14);
          }
        }
      }

      &__number {
        flex: 1;
        letter-spacing: 2px;
      }

    }

    &-wish {
      padding-top: px2rem(320);
      height: px2rem(122);
      p {
        padding-bottom: px2rem(46);
        line-height: px2rem(48);
        padding-left: px2rem(100);
        padding-right: px2rem(100);
      }
    }

    &-bg {
      position: fixed;
      width: 100%;
      height: 100%;
      left: 0;
      top: 0;
      background-size: cover;
      background-repeat: no-repeat;
      z-index: -1;

      &.theme_1 {
        /* background-image: background-image(/gift_list/theme_1.jpg); */
      }

    }
  }

}
