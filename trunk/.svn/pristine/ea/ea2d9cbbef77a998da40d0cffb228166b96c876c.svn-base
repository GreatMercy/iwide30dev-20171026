/* 转赠 */
.jfk-pages__send-gift {
  .button-box {
    padding-left: px2rem(50);
    padding-right: px2rem(50);
    margin-top: px2rem(44);

    .jfk-button {
      width: 100%;
      height: px2rem(84);
      line-height: px2rem(84);
      font-size: px2rem(34);
      box-sizing: content-box;
    }
  }

  .gift-put-order {
    margin-top: px2rem(52);
    margin-bottom: px2rem(40);
    letter-spacing: 2px;
    display: block;
    position: relative;
  }

  .title {
    padding-top: px2rem(47);
    position: relative;
    margin-bottom: px2rem(60);

    &:after {
      content: '';
      position: absolute;
      width: px2rem(42);
      height: px2rem(3);
      left: 50%;
      bottom: px2rem(-18);
      transform: translate(-50%, -50%);
    }

  }

  .goods-info {
    background-color: #dcdcdc;
    height: px2rem(365);
    margin-bottom: px2rem(44);
    border-radius: px2rem(7);
    position: relative;
    overflow: hidden;

    &-mask {
      position: absolute;
      width: 100%;
      height: px2rem(151);
      left: 0;
      bottom: 0;
      background: background-image(/send_gift/goods_mask.png) center center no-repeat;
      background-size: 100% 100%;
      overflow: hidden;
    }

    &-name {
      @mixin ellipsis {
      }
      margin-bottom: px2rem(14);
      margin-top: px2rem(250);
    }

    &-desc {
      height: px2rem(40);
      line-height: px2rem(40);
      font-size: 0;

      &__line {
        height: px2rem(20);
        width: 1px;
        margin-left: px2rem(26);
        margin-right: px2rem(26);
      }

      &__left {
        width: 50%;
        height: px2rem(40);
        overflow: hidden;
        @mixin ellipsis {
        }
      }

      &__right {
        width: 50%;
        height: px2rem(40);
        overflow: hidden;
      }

    }

    &-name, &-desc {
      padding-left: px2rem(20);
      padding-right: px2rem(20);
    }

  }

  .gift-info {
    &__item {
      height: px2rem(100);
      overflow: hidden;
    }

    &-title {
      letter-spacing: 2px;
    }

    &-theme {
      flex: 1;
      height: px2rem(70);
      line-height: px2rem(70);
      position: relative;
      text-align: right;
      padding-right: px2rem(32);

      &__arrow {
        &:after {
          top: 50%;
          right: 1px;
          margin-top: px2rem(-5/2);
          content: '';
          position: absolute;
          height: px2rem(10);
          width: px2rem(10);
          transform: rotate(45deg);
        }
      }

    }

    &-wish {
      background: none;
      border: none;
      outline: none;
      height: px2rem(50);
      line-height: 1;
    }
  }

}
