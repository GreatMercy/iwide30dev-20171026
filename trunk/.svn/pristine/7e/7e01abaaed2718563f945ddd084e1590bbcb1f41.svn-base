.jfk-radio {
  &--shape-rect{
    .jfk-radio {
      &__icon {
        border-color: #505050;
        .icon {
          color: #000;
        }
      }
      &__text {
        color: #fff;
      }
    }
    input[type="radio"] {
      &:disabled ~ .jfk-radio {
        &__icon {
          border-color: #363636;
        }
        &__text {
          color: #363636;
        }
      }
      &:disabled:checked ~ .jfk-radio {
        &__icon {
          &:before {
            border-color: #363636 #363636 transparent transparent;
          }
          .icon {
            color: #1f1f1f
          }
        }
      }
    }
  }
}
